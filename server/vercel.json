{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["connections/**", "models/**", "routes/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server",
      "headers": {
        "Access-Control-Allow-Origin": "https://serranoartcamp.org",
        "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE"
      }
    },
    { "src": "/(.*)", "dest": "client" }
  ]
}