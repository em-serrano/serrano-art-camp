{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build" },
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["routes/**", "models/**", "connections/**", "utils/**", "services/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/registrations",
      "dest": "/server/server.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist",
      "continue": true
    }
  ]
}
